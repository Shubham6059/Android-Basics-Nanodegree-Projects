<?xml version="1.0" encoding="utf-8"?><!--This points to the Preferences available option for user-->
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/settings_title">
    <ListPreference
        android:defaultValue="@string/order_by_default"
        android:entries="@array/order_by_label"
        android:entryValues="@array/order_by_value"
        android:key="@string/order_by_key"
        android:title="@string/order_by_label" />

    <ListPreference
        android:defaultValue="@string/section_news_default"
        android:entries="@array/section_label"
        android:entryValues="@array/section_value"
        android:key="@string/section_news_key"
        android:title="@string/section_label" />

</PreferenceScreen>